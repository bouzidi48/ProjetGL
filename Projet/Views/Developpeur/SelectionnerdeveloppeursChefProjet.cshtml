@model IEnumerable<ProjetNet.Models.Developpeur>

@{
    ViewData["Title"] = "Sélectionner des développeurs";
    var projetId = ViewBag.ProjetId;
}

<h2 class="mb-4">Sélectionner des développeurs</h2>

<form asp-action="SelectionnerdeveloppeursChefProjet" method="post">
    <div class="mb-4">
        <label class="form-label fw-bold">Sélectionnez un ou plusieurs développeurs</label>
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Sélection</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Technologies</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dev in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="DeveloppeurId" value="@dev.Id" class="form-check-input" />
                        </td>
                        <td>@dev.Nom</td>
                        <td>@dev.Prenom</td>
                        <td>@dev.Email</td>
                        <td>@dev.Role</td>
                        <td>
                            @(dev.Technologies != null && dev.Technologies.Any()
                                ? string.Join(", ", dev.Technologies)
                                : "Aucune technologie")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <input type="hidden" name="projetId" value="@projetId" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Affecter</button>
        <a asp-action="AfficherServicesChefProjet" asp-controller="Service" asp-route-id="@projetId" class="btn btn-secondary ms-2">Retour</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
