@model IEnumerable<ProjetNet.Models.Utilisateur>

@{
    ViewData["Title"] = "AffecterChefProjet";
}

<h1>AffecterChefProjet</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
             <td>
                 <form asp-action="AffecterChef" method="post">
                      <input type="hidden" name="id" value="@item.Id" />
                      <button type="submit" class="btn btn-sm btn-primary">Affecter</button>
                 </form>
             </td>
        </tr>
}
    </tbody>
</table>
