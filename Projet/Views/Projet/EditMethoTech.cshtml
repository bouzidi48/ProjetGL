@model ProjetNet.Models.Projet

@{
    ViewData["Title"] = "Modifier Méthodologie et Technologies";
    var allTechnologies = Enum.GetValues(typeof(ProjetNet.Models.Technologie)).Cast<ProjetNet.Models.Technologie>().ToList();
    var allMethodologies = Enum.GetValues(typeof(ProjetNet.Models.Methodologie)).Cast<ProjetNet.Models.Methodologie>().ToList();
    var selectedMethodo = Model?.Methodologie;
}

<h1 class="mt-4 text-primary">Modifier la méthodologie et les technologies</h1>

<div class="card mt-4 shadow-sm p-4">
    <form asp-action="EditMethoTech" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Methodologie" class="form-label fw-bold">Méthodologie</label>
            <select asp-for="Methodologie" asp-items="ViewBag.MethodologieList" class="form-select">
                <option value="">-- Choisissez une méthodologie --</option>
            </select>
            <span asp-validation-for="Methodologie" class="text-danger"></span>
        </div>



        <div class="mb-3">
            <label class="form-label fw-bold">Technologies utilisées</label>
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Sélectionner</th>
                        <th>Technologie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tech in allTechnologies)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="Technologies" value="@tech"
                                       @(Model.Technologies != null && Model.Technologies.Contains(tech) ? "checked" : "") />
                            </td>
                            <td>@tech</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a asp-action="ListerProjetChefProjet" class="btn btn-secondary ms-2">Retour</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
