@model ProjetNet.Models.Tache

@{
    ViewData["Title"] = "Créer une Tâche";
    var serviceId = ViewBag.ServiceId;
}

<h1 class="mt-4 text-primary">Créer une tâche</h1>

<div class="card mt-4 shadow-sm p-4">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Nom" class="form-label fw-bold">Nom de la tâche</label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DescriptionTache" class="form-label fw-bold">Description</label>
            <input asp-for="DescriptionTache" class="form-control" />
            <span asp-validation-for="DescriptionTache" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PourcentageAvancement" class="form-label fw-bold">Pourcentage d'avancement</label>
            <input asp-for="PourcentageAvancement" class="form-control" type="number" step="0.01" min="0" max="100" />
            <span asp-validation-for="PourcentageAvancement" class="text-danger"></span>
        </div>

        

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a asp-action="AfficherTaches" asp-route-id="@serviceId" class="btn btn-secondary ms-2">Retour</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
