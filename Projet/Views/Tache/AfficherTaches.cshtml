@model IEnumerable<ProjetNet.Models.Tache>

@{
    ViewData["Title"] = "Afficher les Tâches";
    var projetId = ViewBag.projetId;
}

<h1 class="my-4 text-center text-primary">Liste des Tâches</h1>

<p class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">Créer une nouvelle tâche</a>
</p>
@if (Model != null && Model.Any())
{
<table class="table table-bordered table-hover table-striped align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.DescriptionTache)</th>
            <th>@Html.DisplayNameFor(model => model.PourcentageAvancement)</th>
            <th>@Html.DisplayNameFor(model => model.Nom)</th>
            <th>Nom du Service</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@(string.IsNullOrEmpty(item.DescriptionTache) ? "NULL" : item.DescriptionTache)</td>
                    <td>@(item.PourcentageAvancement == 0 ? "NULL" : item.PourcentageAvancement.ToString("0.##") + "%")</td>
                    <td>@(string.IsNullOrEmpty(item.Nom) ? "NULL" : item.Nom)</td>
                    <td>@(item.Service != null && !string.IsNullOrEmpty(item.Service.Nom) ? item.Service.Nom : "Aucun service")</td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Modifier</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Détails</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Aucune tâche trouvée.</td>
            </tr>
        }
    </tbody>

</table>
}
else
{
    <p class="mt-4 fst-italic text-muted">Aucune Tache enregistré.</p>
}

<div class="mt-3">
    <a asp-action="ConsulterProjet" asp-controller="Projet" asp-route-id="@projetId" class="btn btn-secondary ms-2">Retour</a>
</div>