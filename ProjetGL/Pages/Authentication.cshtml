@page
@model ProjetGL.Pages.AuthenticationModel
@{
}
<h1 class="text-primary">Authentication</h1>

<form method="post" class="col-4 offset-4">

    <div class="form-group">
        <label class="control-label">Username</label>
        <input type="text" asp-for="Account.Username" class="form-control" />
        <span asp-validation-for="Account.Password" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="control-label">Password</label>
        <input type="password" asp-for="Account.Password" class="form-control mb-3" />
        <span asp-validation-for="Account.Password" class="text-danger"></span>

    </div>
    <div class="text-danger">
        @Model.MsgErr
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
    </div>

    <div>
        Vous n'avez pas de compte? <a class="btn btn-link" asp-page="/Inscription">S'inscrire</a> <!--a s'exucte sous la forme de get-->
    </div>

</form>