@page
@model ProjetGL.Pages.Utilisateur.AjouterUtilisateurModel

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-success text-center">Ajouter un Utilisateur</h2>
        
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success">@Model.Message</div>
        }
        
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Nom d'utilisateur (Login)</label>
                <input type="text" asp-for="Utilisateur.Username" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mot de Passe</label>
                <input type="password" asp-for="Utilisateur.Password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Rôle</label>
                <select asp-for="Utilisateur.Role" class="form-select">
                    <option value="Utilisateur">Utilisateur</option>
                    <option value="Responsable des Ressources">Responsable des Ressources</option>
                    <option value="Enseignant">Enseignant</option>
                    <option value="Chef de Département">Chef de Département</option>
                    <option value="Service de Maintenance">Service de Maintenance</option>
                </select>
            </div>
            
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-success">Ajouter</button>
                <a asp-page="GestionUtilisateurs" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>